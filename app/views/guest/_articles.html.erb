	<%@articles.each do |article|%>
		<div class="media well">
			<h3><%= article.title%></h3>
			<p class="disabled">Created On: <%= article.created_at.strftime("%B %d, %Y %T")%> | Promoted By: Snippet-Team&nbsp;<%= image_tag "favicon.ico"%></p>
		  <a class="pull-left" href="#">
		  	<%= image_tag article.image, :width => "425", :height => "355"%>
		  </a>
		  <div class="media-body">
		    <!-- Nested media object -->
		    <div class="media">
		    	<%= article.description%><br />
		    	<a class="pull-left" href="<%= article.url%>" target="_blank"><h5>Read the Article</h5></a>
		    </div>
		  </div>
		</div>
		<hr />
	<%end%>